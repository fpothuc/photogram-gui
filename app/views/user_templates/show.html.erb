<h1 style="background-color: #034732;"><%=@the_user.username%></h1>

<dl>
  <dt>ID</dt>

  <dd><%=@the_user.id%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<%=@the_user.username%>" method="post">
      <label for="box_new_username">Username</label>
      <input id="box_new_username" type="text" name="query_username" value="<%=@the_user.username%>">
      <button>Update user</button>
    </form>
  </dd>

</dl>

<%if @the_user.own_photos.count == 1%>
  <h2><%=@the_user.own_photos.count.to_s%> Photo</h2>
<%else%>
  <h2><%=@the_user.own_photos.count.to_s%> Photos</h2>
<%end%>

<table border="1">
  <tr style="background-color: #886F68;">
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>
    
  <%@the_user.own_photos.each do |a_post|%>
    <tr>
      <td><img src="<%=a_post.image%>"></td>
      <td><%=a_post.poster.username%></td>
      <td><%=a_post.caption%></td>
      <td><%=a_post.created_at%></td>
      <td><a href="/photos/<%=a_post.id%>">Show details</td>
    </tr>
  <%end%>
</table>
