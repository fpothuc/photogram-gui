<h1 style="background-color: #034732">Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src=<%=@the_photo.image%>>
  </dd>

  <dt>Caption</dt>
  <dd><%=@the_photo.caption%></dd>

  <dt>Owner</dt>
  <dd><%=@the_photo.poster.username%></dd>

  <dt>Posted</dt>
  <dd><%=@the_photo.created_at%></dd>

  <dt>Edit Photo</dt>
  <dd>
    <form action="/update_photo/<%=@the_photo.id%>" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="query_image" value="<%=@the_photo.image%>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="query_caption"><%=@the_photo.caption%></textarea>

      <button type="submit">Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%=@the_photo.id%>">Delete photo</a>
    </form>
  </dd>

  <h2>Comments</h2>

  <table>
    <tr style="background-color: #886F68;">
      <th>Commenter</th>
      <th>Comment</th>
      <th>Posted</th>
    </tr>

    <%@the_photo.comments.each do |a_comment|%>
      <tr>
        <td><%=a_comment.commenter.username%></td>
        <td><%=a_comment.body%></td>
        <td><%=a_comment.created_at%></td>
      </tr>
    <%end%>
  </table>

  <h3>Add a new comment</h3>
  <form action="/add_comment/<%=@the_photo.id%>" method="post">
    <label for="author_id">Author ID</label>
    <input id="author_id" type="text" name="comment_author_id">

    <label for="comment_body">Comment</label>
    <textarea id="comment_body" name="comment_body"></textarea>

    <button type="submit">Add comment</button>
  </form>

</dl>
